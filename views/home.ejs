<style>
    :root {
        --primary-color: #9c27b0;
        --primary-hover: #7b1fa2;
        --accent-color: #e1bee7;
    }
    

    .main-content {
        /* background: #2c3034; */
        /* border-radius: 20px; */
        padding: 1em 1rem;
        /* box-shadow: 0 7px 30px rgba(0, 0, 0, 0.2); */
        text-align: center;
        /* border: 0.2px solid rgba(156, 39, 176, 0.1); */
    }

    
    .display-4 {
        margin-top: 5rem;
        color: #e9ecef;
        font-weight: 800;
        margin-bottom: 1.5rem;
        font-size: 3rem;
        text-shadow: 0 0 90px rgba(156, 39, 176, 0.3);
        letter-spacing: -0.02em;
        line-height: 1.2;
        background: linear-gradient(135deg, #e9ecef 0%, #f8f9fa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
    }


    .lead {
        color: var(--accent-color);
        font-size: 1.235rem;
        font-weight: 500;
        line-height: 1.8;
        margin-bottom: 2.5rem;
        justify-content: center;
        margin-left: 100px;
    }
    

    .typewriter {  
    justify-content: center;

    overflow: hidden;
    text-wrap: center;
    white-space: nowrap;
    border-right: 1px solid var(--accent-color);
    font-family: monospace;
    max-width: 100%;
    width: fit-content;
    animation: typing 5s steps(40, end) 1s forwards, blink 0.8s step-end infinite;
    }



    @keyframes typing {
    from { max-width: 0 }
    to { max-width: 100% }
    }

    @keyframes blink {
    50% { border-color: transparent; }
    }

    @media (max-width: 768px) {
        .typewriter {
            font-size: 1rem;
            animation: typing 4s steps(30, end) 1s forwards, blink 0.8s step-end infinite;
        }   
    }

    @media (max-width: 480px) {
        .typewriter {
            font-size: 0.95rem;
            animation: typing 4s steps(25, end) 1s forwards, blink 0.8s step-end infinite;
        }
    }


    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
        border: none;
        padding: 1.2rem 3rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 25px rgba(156, 39, 176, 0.3);
        position: relative;
        overflow: hidden;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, var(--primary-hover) 0%, var(--primary-color) 100%);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(156, 39, 176, 0.35);
    }

    .btn-primary:hover::before {
        left: 100%;
    }

    .btn-primary:active {
        transform: translateY(-1px);
        box-shadow: 0 6px 20px rgba(156, 39, 176, 0.3);
    }
    footer {
        margin-top: 3rem;
        color: #adb5bd;
        font-size: 0.9rem;
    }
    
    body, html {
        margin: 0;
        padding: 0;
        overflow: hidden; /* disables scrolling */
        height: 100%;
    }

    .recipe-categories {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 3rem;
        flex-wrap: wrap;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: rgba(156, 39, 176, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        font-size: 40px;
        cursor: pointer;
        position: relative;
        animation: spinFloat 6s ease-in-out infinite;
    }

    .icon-circle::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: rgba(156, 39, 176, 0.2);
        filter: blur(10px);
        z-index: -1;
        opacity: 0;
        transition: opacity 0.3s;
    }

    @keyframes glow {
        0%, 100% {
            box-shadow: 0 0 5px rgba(156, 39, 176, 0.3),
                       0 0 15px rgba(156, 39, 176, 0.2);
        }
        50% {
            box-shadow: 0 0 15px rgba(156, 39, 176, 0.5),
                       0 0 25px rgba(156, 39, 176, 0.3);
        }
    }

    @media (max-width: 768px) {
        .recipe-categories {
            gap: 1.5rem;
            padding: 0 1rem;
        }
        .icon-circle {
            width: 60px;
            height: 60px;
            font-size: 30px;
        }
    }

    @media (max-width: 576px) {
        .recipe-categories {
            gap: 1rem;
        }
        .icon-circle {
            width: 50px;
            height: 50px;
            font-size: 25px;
        }
    }

    @keyframes spinFloat {
        0%, 100% {
            transform: translateY(0) rotate(0deg) scale(1);
        }
        33% {
            transform: translateY(-10px) rotate(10deg) scale(1.1);
        }
        66% {
            transform: translateY(-15px) rotate(-10deg) scale(0.95);
        }
    }

    .icon-circle:hover {
        transform: scale(1.1);
    }

</style>

