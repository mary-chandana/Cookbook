<% layout('layouts/boilerplate')%>

<div class="container">
    <!-- Page Header with Title and New Recipe Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0" style="color: #e9ecef; font-weight: 600;">All Recipes</h1>
        <% if(currentUser) { %>
            <a href="/recipes/new" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>New Recipe
            </a>
        <% } %>
    </div>
    
    <!-- Recipe Cards Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for(let recipe of recipes) { %>
            <div class="col">
                <!-- Individual Recipe Card -->
                <div class="card h-100 shadow-sm" style="background-color: #2b3035; border: none; transition: transform 0.2s;">
                    
                    <!-- Recipe Image Section -->
                    <div class="card-img-top" style="height: 200px; overflow: hidden;">
                        <% if(recipe.images && recipe.images.length > 0) { %>
                            <!-- Display first recipe image -->
                            <img src="<%= recipe.images[0].url %>" class="w-100 h-100" style="object-fit: cover;">
                        <% } else { %>
                            <!-- Placeholder for recipes without images -->
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center" style="background-color: #343a40;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- Recipe Information Section -->
                    <div class="card-body">
                        <!-- Recipe Title -->
                        <h5 class="card-title mb-2" style="color: #e9ecef;"><%= recipe.title %></h5>
                        
                        <!-- Recipe Author -->
                        <p class="card-text text-muted mb-2" style="font-size: 0.9rem;">
                            <i class="fas fa-user me-1"></i><%= recipe.author ? recipe.author.username : 'Anonymous' %>
                        </p>
                        
                        <!-- Ingredients Count (if ingredients exist) -->
                        <!-- <% if(recipe.ingredients && recipe.ingredients.length > 0) { %>
                            <p class="card-text text-muted mb-3" style="font-size: 0.85rem;">
                                <i class="fas fa-list-ul me-1"></i><%= recipe.ingredients.length %> ingredient<%= recipe.ingredients.length !== 1 ? 's' : '' %>
                            </p>
                        <% } %> -->
                    </div>
                    
                    <!-- Recipe Action Button -->
                    <div class="card-footer bg-transparent border-0">
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-primary w-100">
                            <i class="fas fa-clipboard-list me-2"></i>View Recipe
                        </a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>